{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "lib": ["es2022"],
    "module": "commonjs",
    "rootDir": "./src",
    "declaration": true,
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "lib", "coverage"]
}
